<div class="row">
  <div class="col-md-4">
    <p class="lead"><span class="glyphicon glyphicon-cog"></span> Lists</p>
  </div>
  <div class="col-md-8">
    {{outlet}}

    <h3>Achievements{{#linkTo 'achievements.new' class="btn btn-default btn-lg pull-right"}}<span class="glyphicon glyphicon-plus"></span> Add achievement{{/linkTo}}</h3>
    <ul class="list-group achievements">
      {{#each controller}}
        {{#unless 'isDirty'}}
        <li class="list-group-item">
          <span class="badge">{{date achievedAt}} </span> {{title}}
        </li>
        {{/unless}}
      {{else}}
      <li>
        <img src="/assets/cat_hungry.png">
        <h3>There are no achievements yet.</h3>
      </li>
      {{/each}}
    </ul>
  </div>
</div>